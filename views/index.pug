extends layout

block content
    div(class="container")
      div(class="agregar")
        h2 ANIMALES FANTASTICOS
        div(class='Formulario')
          form
            div(class="form-group")
              label(for="exampleInputEmail1") Nombre
              input( type="text" class="form-control" id="name" placeholder="Animal Fantastico")
              
            div(class="form-group")
              label(for="clasificacion") Clasificación
              input( type="text" class="form-control" id="clasificacion" placeholder="¿De que clasificacion es?")

            div(class="form-group")
              label(for="Apariencia") Apariencia
              input( type="text" class="form-control" id="apariencia" placeholder="¿Que apariencia tiene?")

            div(class="form-group")
              label(for="ubicacion") Apariencia
              input( type="text" class="form-control" id="ubicacion" placeholder="¿Donde se ubica?")

            div(class="form-group")
              div(class="custom-control custom-switch")
                input(type="checkbox" class="custom-control-input" id="late_switch")
                label(class="custom-control-label" for="late_switch") Poder Especial      
            div(class="form-group")
              button(type="button" class="btn btn-danger" id="submit_btn") Ingresar

      div(class="buscar")
        table( class="table table-hover")
          thead
            tr(class="table-dark")
              th(scope="col") Nombre
              th(scope="col") Clasificacion
              th(scope="col" class="hide") Apariencia
              th(scope="col" class="hide") Ubicacion
              th(scope="col") Poder?
            tbody(id="table_body")
              tr